<% flat = data.flats[owner] %>

<%= image_tag "https://kitt.lewagon.com/placeholder/cities/#{"city_slug"}", class: "banner" %>

<div class="flex-box">
  <div class="flat-info">
    <div class="flat-card">
      <div class="avatar-name text-center">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "flat-user" %>
        <p class="flat-name"><%= flat.name %></p>
      </div>
      <p class="flat-description"><%= flat.description %></p>
      <p class="city-name"><%= flat.city_name %></p>
      <div class="flat-rating">
        <p>Rating:
        <% flat.rating.times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="booking">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h3>Book this flat</h3>
        <form action="#">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <input class="form-control" placeholder="Check-in" type="date">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <input class="form-control" placeholder="Check-out" type="date">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select class="form-control">
              <option value="">1 guest</option>
              <option value="">2 guests</option>
              <option value="">3 guests</option>
            </select>
          </div>
          <input value="Book it" class="btn btn-danger" type="submit">
        </form>
      </div>
    </div>
  </div>
</div>

